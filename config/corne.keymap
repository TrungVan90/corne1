#include <dt-bindings/zmk/mouse.h>

// Cấu hình tốc độ mouse (PHẢI đặt TRƯỚC include pointing.h)

#define ZMK_POINTING_DEFAULT_MOVE_VAL 1000  // Tốc độ di chuyển (default: 600)
#define ZMK_POINTING_DEFAULT_SCRL_VAL 20    // Tốc độ scroll (default: 10)

#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define BASE 0
#define LOWER 1
#define RAISE 2
#define NUMPAD 3
#define FKEYS 4
#define MOUSE 5

/ {
    behaviors {
        // ─── Home Row Mod cho TAY TRÁI ───

        hml: home_row_mod_left {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "balanced";
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            bindings = <&kp>, <&kp>;

            hold-trigger-key-positions = <
                6  7  8  9  10 11
                18 19 20 21 22 23
                30 31 32 33 34 35
                39 40 41
            >;

            hold-trigger-on-release;
        };

        // ─── Home Row Mod cho TAY PHẢI ───

        hmr: home_row_mod_right {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "balanced";
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            bindings = <&kp>, <&kp>;

            hold-trigger-key-positions = <
                0  1  2  3  4  5
                12 13 14 15 16 17
                24 25 26 27 28 29
                36 37 38
            >;

            hold-trigger-on-release;
        };
    };

    macros {
        fz_left: fz_left {
            label = "FZ_LEFT";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LGUI>,
                <&macro_press>,
                <&kp LCTRL>,
                <&macro_press>,
                <&kp LALT>,
                <&macro_tap>,
                <&kp N1>,
                <&macro_release>,
                <&kp LALT>,
                <&macro_release>,
                <&kp LCTRL>,
                <&macro_release>,
                <&kp LGUI>;
        };

        fz_mid: fz_mid {
            label = "FZ_MID";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LGUI>,
                <&macro_press>,
                <&kp LCTRL>,
                <&macro_press>,
                <&kp LALT>,
                <&macro_tap>,
                <&kp N2>,
                <&macro_release>,
                <&kp LALT>,
                <&macro_release>,
                <&kp LCTRL>,
                <&macro_release>,
                <&kp LGUI>;
        };

        fz_right: fz_right {
            label = "FZ_RIGHT";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LGUI>,
                <&macro_press>,
                <&kp LCTRL>,
                <&macro_press>,
                <&kp LALT>,
                <&macro_tap>,
                <&kp N3>,
                <&macro_release>,
                <&kp LALT>,
                <&macro_release>,
                <&kp LCTRL>,
                <&macro_release>,
                <&kp LGUI>;
        };

        fz_cal: fz_cal {
            label = "FZ_CAL";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LGUI>,
                <&macro_tap>,
                <&kp R>,
                <&macro_release>,
                <&kp LGUI>,
                <&macro_pause_for_release>,
                <&macro_tap>,
                <&kp C>,
                <&macro_tap>,
                <&kp A>,
                <&macro_tap>,
                <&kp L>,
                <&macro_tap>,
                <&kp C>,
                <&macro_tap>,
                <&kp ENTER>;
        };
    };

    conditional_layers { compatible = "zmk,conditional-layers"; };

    keymap {
        compatible = "zmk,keymap";

        // ═══════════════════════════════════════════════════════════════
        // Layer 0: DEFAULT - QWERTY với Home Row Mods
        // ═══════════════════════════════════════════════════════════════

        default_layer {
            label = "default";

            // ┌──────┬──────┬──────┬──────┬──────┬──────┐   ┌──────┬──────┬──────┬──────┬──────┬──────┐
            // │ TAB  │  Q   │  W   │  E   │  R   │  T   │   │  Y   │  U   │  I   │  O   │  P   │ BSPC │
            // ├──────┼──────┼──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┼──────┼──────┤
            // │ ESC  │GUI/A │ALT/S │CTL/D │SFT/F │  G   │   │  H   │SFT/J │CTL/K │ALT/L │GUI/; │  '   │
            // ├──────┼──────┼──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┼──────┼──────┤
            // │LSHFT │  Z   │  X   │  C   │  V   │  B   │   │  N   │  M   │  ,   │  .   │  /   │RSHFT │
            // └──────┴──────┴──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┴──────┴──────┘
            //                      │RAISE │LOWER │SPACE │   │MS/BS │ENTER │NUMPAD│
            //                      └──────┴──────┴──────┘   └──────┴──────┴──────┘

            bindings = <
&kp TAB    &kp Q        &kp W        &kp E         &kp R         &kp T    &kp Y      &kp U            &kp I         &kp O        &kp P           &kp BSPC
&kp ESC    &hml LGUI A  &hml LALT S  &hml LCTRL D  &hml LSHFT F  &kp G    &kp H      &hmr RSHFT J     &hmr RCTRL K  &hmr LALT L  &hmr RGUI SEMI  &kp SQT
&kp LSHFT  &kp Z        &kp X        &kp C         &kp V         &kp B    &kp N      &kp M            &kp COMMA     &kp DOT      &kp FSLH        &kp RSHFT
                                     &none         &mo 2         &mo 1    &kp SPACE  &lt 5 BACKSPACE  &kp ENTER
            >;
        };

        // ═══════════════════════════════════════════════════════════════
        // Layer 1: LOWER - Navigation + Clipboard
        // ═══════════════════════════════════════════════════════════════

        arrow_layer {
            label = "lower";

            // ┌──────┬──────┬──────┬──────┬──────┬──────┐   ┌──────┬──────┬──────┬──────┬──────┬──────┐
            // │ CAPS │ MENU │ TAB  │ ESC  │ DEL  │CTL+R │   │  F4  │PG UP │  UP  │PG DN │ HOME │ END  │
            // ├──────┼──────┼──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┼──────┼──────┤
            // │      │ LGUI │ LALT │LCTRL │LSHFT │CTL+D │   │  F2  │ LEFT │ DOWN │RIGHT │  '   │  \   │
            // ├──────┼──────┼──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┼──────┼──────┤
            // │      │CTL+A │CTL+X │CTL+C │CTL+V │PSCRN │   │      │      │      │      │      │      │
            // └──────┴──────┴──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┴──────┴──────┘
            //                      │      │▓▓▓▓▓▓│      │   │  '   │      │      │
            //                      └──────┴──────┴──────┘   └──────┴──────┴──────┘

            bindings = <
&trans  &kp CAPSLOCK  &kp K_APP  &kp TAB    &kp ESCAPE  &kp DELETE    &kp F4  &kp PG_UP  &kp UP    &kp PG_DN  &none          &trans
&trans  &kp LGUI      &kp LALT   &kp LCTRL  &kp LSHFT   &kp LC(R)     &kp F2  &kp LEFT   &kp DOWN  &kp RIGHT  &kp SQT        &trans
&trans  &kp LC(A)     &kp LC(X)  &kp LC(C)  &kp LC(V)   &kp LC(D)     &none   &kp HOME   &none     &kp END    &kp BACKSLASH  &trans
                                 &trans     &trans      &trans        &mo 3   &trans     &trans
            >;
        };

        // ═══════════════════════════════════════════════════════════════
        // Layer 2: RAISE - Programming Symbols + Macros
        // ═══════════════════════════════════════════════════════════════

        symbols_layer {
            label = "raise";

            // ┌──────┬──────┬──────┬──────┬──────┬──────┐   ┌──────┬──────┬──────┬──────┬──────┬──────┐
            // │      │      │      │ TAB  │ ESC  │ DEL  │   │  |   │  *   │  (   │  )   │  /   │      │
            // ├──────┼──────┼──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┼──────┼──────┤
            // │      │ LGUI │ LALT │LCTRL │LSHFT │BTCLR │   │  =   │  +   │  [   │  ]   │  -   │      │
            // ├──────┼──────┼──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┼──────┼──────┤
            // │      │FZ CAL│FZ LFT│FZ MID│FZ RGT│PSCRN │   │  `   │  &   │  {   │  }   │  \   │      │
            // └──────┴──────┴──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┴──────┴──────┘
            //                      │▓▓▓▓▓▓│      │      │   │  '   │      │      │
            //                      └──────┴──────┴──────┘   └──────┴──────┴──────┘

            bindings = <
&trans  &none     &none     &kp TAB    &kp ESC    &kp DELETE    &kp PIPE   &kp ASTRK  &kp LPAR  &kp RPAR  &kp FSLH   &trans
&trans  &kp LGUI  &kp LALT  &kp LCTRL  &kp LSHFT  &none         &kp EQUAL  &kp PLUS   &kp LBKT  &kp RBKT  &kp MINUS  &trans
&trans  &fz_cal   &fz_left  &fz_mid    &fz_right  &kp PSCRN     &kp GRAVE  &kp AMPS   &kp LBRC  &kp RBRC  &kp BSLH   &trans
                            &trans     &trans     &trans        &mo 4      &trans     &trans
            >;
        };

        // ═══════════════════════════════════════════════════════════════
        // Layer 3: NUMPAD - Bàn phím số
        // ═══════════════════════════════════════════════════════════════

        numpad_layer {
            label = "numpad";

            // ┌──────┬──────┬──────┬──────┬──────┬──────┐   ┌──────┬──────┬──────┬──────┬──────┬──────┐
            // │      │      │ TAB  │ ESC  │ DEL  │      │   │      │  7   │  8   │  9   │      │      │
            // ├──────┼──────┼──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┼──────┼──────┤
            // │      │ LGUI │ LALT │LCTRL │LSHFT │      │   │      │  4   │  5   │  6   │      │      │
            // ├──────┼──────┼──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┼──────┼──────┤
            // │      │      │      │      │      │      │   │  1   │  2   │  3   │      │      │      │
            // └──────┴──────┴──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┴──────┴──────┘
            //                      │      │      │      │   │  0   │  .   │▓▓▓▓▓▓│
            //                      └──────┴──────┴──────┘   └──────┴──────┴──────┘

            bindings = <
&trans  &none     &none     &kp TAB    &kp ESCAPE  &kp DELETE    &none   &kp N7        &kp N8        &kp N9        &none  &trans
&trans  &kp LGUI  &kp LALT  &kp LCTRL  &kp LSHFT   &none         &none   &kp N4        &kp N5        &kp N6        &none  &trans
&trans  &none     &none     &none      &none       &none         &none   &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &none  &trans
                            &trans     &trans      &trans        &trans  &kp NUMBER_0  &kp DOT
            >;
        };

        // ═══════════════════════════════════════════════════════════════
        // Layer 4: FKEYS - Phím chức năng (LOWER + RAISE)
        // ═══════════════════════════════════════════════════════════════

        f_layer {
            label = "fkeys";

            // ┌──────┬──────┬──────┬──────┬──────┬──────┐   ┌──────┬──────┬──────┬──────┬──────┬──────┐
            // │      │      │ TAB  │ ESC  │ DEL  │      │   │ F11  │  F7  │  F8  │  F9  │ F12  │      │
            // ├──────┼──────┼──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┼──────┼──────┤
            // │      │ LGUI │ LALT │LCTRL │LSHFT │      │   │  F4  │  F5  │  F6  │      │      │      │
            // ├──────┼──────┼──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┼──────┼──────┤
            // │      │      │      │      │      │      │   │  F1  │  F2  │  F3  │      │      │      │
            // └──────┴──────┴──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┴──────┴──────┘
            //                      │▓▓▓▓▓▓│▓▓▓▓▓▓│      │   │ F10  │      │      │
            //                      └──────┴──────┴──────┘   └──────┴──────┴──────┘

            bindings = <
&trans  &none     &none     &kp TAB    &kp ESCAPE  &kp DELETE    &kp F11  &kp F7   &kp F8  &kp F9  &kp F12  &trans
&trans  &kp LGUI  &kp LALT  &kp LCTRL  &kp LSHFT   &none         &none    &kp F4   &kp F5  &kp F6  &none    &trans
&trans  &none     &none     &none      &none       &none         &none    &kp F1   &kp F2  &kp F3  &none    &trans
                            &trans     &trans      &trans        &trans   &kp F10  &trans
            >;
        };

        // ═══════════════════════════════════════════════════════════════
        // Layer 5: MOUSE - Chuột + Media + Bluetooth
        // ═══════════════════════════════════════════════════════════════

        mouse_layer {
            label = "mouse";

            // ┌──────┬──────┬──────┬──────┬──────┬──────┐   ┌──────┬──────┬──────┬──────┬──────┬──────┐
            // │ BT 0 │SCR UP│MSE UP│SCR DN│ BT 2 │      │   │      │ NEXT │VOL UP│VOL DN│ PREV │BTCLR │
            // ├──────┼──────┼──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┼──────┼──────┤
            // │ BT 1 │MSE L │MSE DN│MSE R │ BT 3 │      │   │      │RSHFT │RCTRL │ RALT │ RGUI │      │
            // ├──────┼──────┼──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┼──────┼──────┤
            // │      │SCR L │      │SCR R │      │      │   │      │ LCLK │ MCLK │ RCLK │ MUTE │      │
            // └──────┴──────┴──────┼──────┼──────┼──────┤   ├──────┼──────┼──────┼──────┴──────┴──────┘
            //                      │      │      │      │   │▓▓▓▓▓▓│      │      │
            //                      └──────┴──────┴──────┘   └──────┴──────┴──────┘

            bindings = <
&trans  &bt BT_SEL 0  &msc SCRL_UP    &mmv MOVE_UP    &msc SCRL_DOWN   &bt BT_SEL 2    &trans  &kp C_NEXT  &kp C_VOL_UP  &kp C_VOL_DN  &kp C_PREV  &bt BT_CLR
&trans  &bt BT_SEL 1  &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &bt BT_SEL 3    &trans  &kp RSHFT   &kp RCTRL     &kp RALT      &kp RGUI    &trans
&trans  &none         &msc SCRL_LEFT  &none           &msc SCRL_RIGHT  &none           &trans  &mkp LCLK   &mkp MCLK     &mkp RCLK     &kp C_MUTE  &trans
                                      &trans          &trans           &trans          &trans  &trans      &trans
            >;
        };
    };
};
